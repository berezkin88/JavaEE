SELECT COMPANIES.COMPANY_NAME, min(PROJECTS.COST), CUSTOMERS.CUSTOMER_NAME
FROM COMPANIES LEFT OUTER JOIN PROJECTS
ON PROJECTS.COMPANY_ID=COMPANIES.COMPANY_ID RIGHT OUTER JOIN CUSTOMERS ON CUSTOMERS.CUSTOMER_ID=PROJECTS.CUSTOMER_ID
GROUP BY COMPANIES.COMPANY_NAME, CUSTOMERS.CUSTOMER_NAME ORDER BY min(PROJECTS.COST), COMPANY_NAME LIMIT 3;