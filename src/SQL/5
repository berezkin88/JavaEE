CREATE VIEW TEMPORARY_TABLE AS SELECT COMPANY_NAME, min(PROJECTS.COST), CUSTOMER_NAME FROM PROJECTS
INNER JOIN COMPANIES ON PROJECTS.COMPANY_ID=COMPANIES.COMPANY_ID
INNER JOIN CUSTOMERS ON PROJECTS.CUSTOMER_ID=CUSTOMERS.CUSTOMER_ID
GROUP BY COMPANY_NAME, CUSTOMER_NAME ORDER BY min(PROJECTS.COST), COMPANY_NAME;

SELECT *
FROM TEMPORARY_TABLE LIMIT 3;