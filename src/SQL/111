ALTER TABLE PROJECTS ADD COLUMN COMPANY_ID INT;
ALTER TABLE PROJECTS ADD COLUMN CUSTOMER_ID INT;

COMMIT;

UPDATE PROJECTS SET COMPANY_ID = 1 WHERE PROJECT_ID = 1;
UPDATE PROJECTS SET COMPANY_ID = 1 WHERE PROJECT_ID = 2;
UPDATE PROJECTS SET COMPANY_ID = 2 WHERE PROJECT_ID = 3;
UPDATE PROJECTS SET COMPANY_ID = 2 WHERE PROJECT_ID = 4;
